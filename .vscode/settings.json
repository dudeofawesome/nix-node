{
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nixd": {
      "options": {
        // Disable it if you are not writting modules.
        "enable": true,
        "target": {
          // "args": []
          // Example of NixOS options.
          "installable": "<flakeref>#22"
        }
      }
    },
    "nil": {
      "formatting": {
        "command": ["nixpkgs-fmt"]
      }
    }
  },
  "cSpell.words": ["nixpkgs", "pkgs"]
}
